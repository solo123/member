<div>
   <% form_tag do %>
  <div class="ui-corner-all" style="border:solid 3px #216572;">
    <div style="background-color:white;padding:10px;height:220px;color:#216572;">

      <h1>重设密码</h1>
     
      <p>
        <label for="name">手机号：</label><br />
        <%= text_field_tag :mobile, params[:mobile] %>
      </p>
    </div>  
    <div style="height:100px; background-color:#2b6e81;padding:10px;">
      <%= submit_tag "发送短信到手机", :class => 'submit' %>
      <%= submit_tag "发送到我的Email", :class => 'submit' %>
      &nbsp;&nbsp;
      <a href="/" class="reg_link">&lt; 返回登录页面</a>
      <div  style="margin-top:10px;">
        <%= flash[:alert] %>
        <% if flash[:notice] -%>
          <%= flash[:notice] -%>
        <% end -%>
      </div>
    </div>
  </div>  
<% end %>
</div>